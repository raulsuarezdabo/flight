<!-- ## FILE TO DECLARE THE TEMPLATES AND TAG STRUCTURE FOR EACH ONE -->
<collection>
    <item id="wellcome">
        <template>wellcome.ftl</template>
        <from>
            <email>no-reply@flight-now.com</email>
            <name>Wellcome Flight Now!</name>
        </from>
        <tags>
            <tag>wellcome</tag>
            <tag>new-user</tag>
        </tags>
    </item>
    <item id="forgot_account">
        <template>forgot_account.ftl</template>
