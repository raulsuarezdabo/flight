        </from>
        <tags>
            <tag>forgot</tag>
            <tag>user</tag>
        </tags>
    </item>
    <item id="booking_confirmation">
        <template>booking_confirmation.ftl</template>
        <from>
            <email>no-reply@flight-now.com</email>
