<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <!-- APPLICATIONS CONF -->
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>ES</default-locale>
            <supported-locale>EN</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.mycompany.flight.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <!-- LISTENERS -->
        <system-event-listener>
            <system-event-listener-class>com.raulsuarezdabo.flight.jsf.listener.CustomSystemEventListener</system-event-listener-class>
            <system-event-class>javax.faces.event.PreRenderViewEvent</system-event-class>
        </system-event-listener>
    </application>
    <!-- VALIDATORS -->
    <validator>
        <validator-id>ageValidator</validator-id>
        <validator-class>com.mycompany.flight.jsf.validator.AgeValidator</validator-class>
    </validator>
    <validator>
        <validator-id>requiredCheckboxValidator</validator-id>
        <validator-class>com.mycompany.flight.jsf.validator.RequiredCheckboxValidator</validator-class>
    </validator>
    <!-- CONVERTER DECLARATIONS -->
    <!-- NAVIGATIONS RULES -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <description>Navigation case that show the home page</description>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>register/forgot-account.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>false</from-outcome>
            <to-view-id>register/forgot-account-fails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>true</from-outcome>
            <to-view-id>register/forgot-account-success.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
