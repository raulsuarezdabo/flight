<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <!-- APPLICATIONS CONF -->
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>ES</default-locale>
            <supported-locale>EN</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.mycompany.flight.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <!-- ERROR HANDLER -->
    <managed-bean>
        <managed-bean-name>errorHandler</managed-bean-name>
        <managed-bean-class>com.mycompany.flight.jsf.error.ErrorHandler</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <!-- VALIDATORS -->
    <validator>
        <validator-id>ageValidator</validator-id>
        <validator-class>com.mycompany.flight.jsf.validator.AgeValidator</validator-class>
    </validator>
    <!-- CONVERTER DECLARATIONS -->
    <!-- NAVIGATIONS RULES -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <description>Navigation case that show the home page</description>
            <from-outcome>index</from-outcome>
            <to-view-id>/faces/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>Navigation case that show the form to sing up a new user</description>
            <from-outcome>new_user</from-outcome>
            <to-view-id>/register/new_user.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>Navigation case that show the form to sing in a user</description>
            <from-outcome>login</from-outcome>
            <to-view-id>/register/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <description>Navigation case that show the form to sing in a user</description>
            <from-outcome>forgot-account</from-outcome>
            <to-view-id>/register/forgot-account.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>register/new_user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>false</from-outcome>
            <to-view-id>register/fails_new_user.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>true</from-outcome>
            <to-view-id>register/success_new_user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>register/forgot-account.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>false</from-outcome>
            <to-view-id>register/forgot-account-fails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>true</from-outcome>
            <to-view-id>register/forgot-account-success.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--<managed-bean>
        <managed-bean-name></managed-bean-name>
        <managed-bean-class></managed-bean-class>
        <managed-bean-scope></managed-bean-scope>
    </managed-bean>-->
    <!-- MANAGED BEANS -->
    <managed-bean>
        <managed-bean-name>localeBean</managed-bean-name>
        <managed-bean-class>com.mycompany.flight.language.LocaleBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>newUserBean</managed-bean-name>
        <managed-bean-class>com.mycompany.flight.register.NewUserBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>userService</property-name>
            <property-class>com.mycompany.flight.service.UserService</property-class>
            <value>#{userService}</value>
        </managed-property>
        <managed-property>
            <property-name>countryDAO</property-name>
            <property-class>com.mycompany.flight.dao.CountryDAO</property-class>
            <value>#{countryDAO}</value>
        </managed-property>
        <managed-property>
            <property-name>cityDAO</property-name>
            <property-class>com.mycompany.flight.dao.CityDAO</property-class>
            <value>#{cityDAO}</value>
        </managed-property>
        <managed-property>
            <property-name>userDAO</property-name>
            <property-class>com.mycompany.flight.dao.UserDAO</property-class>
            <value>#{userDAO}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>forgotUserBean</managed-bean-name>
        <managed-bean-class>com.mycompany.flight.register.ForgotUserBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>userDAO</property-name>
            <property-class>com.mycompany.flight.dao.UserDAO</property-class>
            <value>#{userDAO}</value>
        </managed-property>
        <managed-property>
            <property-name>userService</property-name>
            <property-class>com.mycompany.flight.service.UserService</property-class>
            <value>#{userService}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>userLoginBean</managed-bean-name>
        <managed-bean-class>com.mycompany.flight.security.UserLoginBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>userService</property-name>
            <property-class>com.mycompany.flight.service.UserService</property-class>
            <value>#{userService}</value>
        </managed-property>
    </managed-bean>
</faces-config>
